prototype(Carbon.FormComponent:Input) < prototype(Carbon.FormComponent:Field) {
    field = 'input'
    id = null
    label = null
    // if falsy the type will be 'text'
    type = null

    renderer.element = afx`
        <input placeholder={props.placeholder || ' '} type={props.type || 'text'}  value={props.value} />
    `
}
